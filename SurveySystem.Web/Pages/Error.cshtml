@page
@model SurveySystem.Web.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Error</h2>
                </div>
                <div class="card-body text-center py-5">
                    <h3>An error occurred while processing your request.</h3>

                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <p class="mb-4">
                        Our technical team has been notified of this issue. Please try again later or contact support if the problem persists.
                    </p>

                    <a href="/" class="btn btn-primary btn-lg">
                        <i class="bi bi-house me-2"></i> Return to Home Page
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

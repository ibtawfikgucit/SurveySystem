@page
@model SurveySystem.Web.Pages.Account.WindowsLoginModel
@{
    ViewData["Title"] = "Windows Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Windows Authentication</h4>
                </div>
                <div class="card-body py-5">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            @Model.ErrorMessage
                        </div>
                    }
                    else if (User.Identity.IsAuthenticated)
                    {
                        <div class="alert alert-success">
                            <h5>Authentication Successful!</h5>
                            <p>You are signed in as <strong>@User.Identity.Name</strong></p>
                        </div>

                        <div class="mt-4">
                            <a asp-page="/Index" class="btn btn-primary">Continue to Dashboard</a>
                        </div>
                    }
                    else
                    {
                        <div>
                            <i class="bi bi-shield-lock text-primary" style="font-size: 4rem;"></i>
                            <h5 class="mt-3">Authenticating...</h5>
                            <p>You should be automatically authenticated using your Windows account.</p>
                            <p>If authentication doesn't happen automatically, please click the button below:</p>

                            <form method="post">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-windows me-2"></i> Authenticate with Windows
                                </button>
                            </form>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a asp-page="/Account/Login" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i> Back to Login Options
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
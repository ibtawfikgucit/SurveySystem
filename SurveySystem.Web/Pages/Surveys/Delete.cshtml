@page "{id:guid}"
@model SurveySystem.Web.Pages.Surveys.DeleteModel
@{
    ViewData["Title"] = "Delete Survey";
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Delete Survey</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title">Are you sure you want to delete this survey?</h5>
            <p class="card-text">This action cannot be undone. All survey data, questions, and responses will be permanently deleted.</p>

            <div class="alert alert-warning">
                <strong>Warning:</strong> This survey has @Model.ResponseCount responses that will also be deleted.
            </div>

            <div class="card bg-light mb-4">
                <div class="card-body">
                    <h6 class="card-title">Survey Details</h6>
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Model.Survey.Title</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Survey.Description) ? "N/A" : Model.Survey.Description)</dd>

                        <dt class="col-sm-3">Created By</dt>
                        <dd class="col-sm-9">@Model.Survey.CreatedBy</dd>

                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Model.Survey.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.Survey.IsPublished)
                            {
                                <span class="badge bg-success">Published</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Draft</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Questions</dt>
                        <dd class="col-sm-9">@Model.QuestionCount</dd>
                    </dl>
                </div>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Survey.Id" />
                <div class="d-flex justify-content-between">
                    <a asp-page="./Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i> Delete Survey
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>